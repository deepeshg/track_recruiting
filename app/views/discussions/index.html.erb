<div class="page-header">
  <h1>
    Discussions
    <a href="/discussions/new" class="btn btn-primary">New Discussion</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Contact</th>
        <th>Firm</th>
        <th>Date</th>
        <th>Notes</th>
        <th>Follow up</th>
        <!-- <th>Follow up time</th> -->
        <th>Priority</th>
        <th>Show / Edit / Delete</th>
      </tr>

      <% @discussions.each do |discussion| %>
      <% if discussion.user_id == current_user.id %>
      <tr>
        <td><a href="/contacts/<%= discussion.contact.id %>"><%= discussion.contact.name %></a></td>
        <td><a href="/firms/<%= discussion.contact.firm.id %>"><%= discussion.contact.firm.name %></a></td>
        <!-- <td><%= discussion.contact.name %></td> -->
        <td><%= discussion.date.to_formatted_s(:long)  %></td>
        <td><%= discussion.notes %></td>
        <td><%= discussion.follow_up %></td>
        <!-- <td><%= discussion.follow_up_time %></td> -->
        <td><%= discussion.priority %></td>
        <td>
          <a href="/discussions/<%= discussion.id %>" class="btn btn-primary"><i class="fa fa-newspaper-o" aria-hidden="true"></i></a>
          <a href="/discussions/<%= discussion.id %>/edit" class="btn btn-warning"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
          <a href="/delete_discussion/<%= discussion.id %>" class="btn btn-danger" rel="nofollow"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
