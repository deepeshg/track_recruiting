<div class="page-header">
  <h1>
    Discussions
    <a href="/discussions/new" class="btn btn-lg btn-success">New Discussion</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Contact</th>
        <th>Date</th>
        <th>Notes</th>
        <th>Follow up</th>
        <th>Follow up time</th>
        <th>Priority</th>
        <th>Actions</th>
      </tr>

      <% @discussions.each do |discussion| %>
      <tr>
        <td><%= discussion.contact_id %></td>
        <td><%= discussion.date %></td>
        <td><%= discussion.notes %></td>
        <td><%= discussion.follow_up %></td>
        <td><%= discussion.follow_up_time %></td>
        <td><%= discussion.priority %></td>
        <td>
          <a href="/discussions/<%= discussion.id %>" class="btn btn-primary">Show</a>
          <a href="/discussions/<%= discussion.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_discussion/<%= discussion.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
