<div class="page-header">
  <h3>Discussion #<%= @discussion.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Contact</dt>
      <dd><a href="/contacts/<%= @discussion.contact.id %>"><%= @discussion.contact.name %></a></dd>

      <dt>Firm</dt>
      <dd><a href="/firm/<%= @discussion.contact.firm.id %>"><%= @discussion.contact.firm.name %></a></dd>

      <dt>Date</dt>
      <dd><%= @discussion.date.to_formatted_s(:long)  %></dd>

      <dt>Notes</dt>
      <dd><%= @discussion.notes %></dd>

      <dt>Follow up</dt>
      <dd><%= @discussion.follow_up %></dd>

      <dt>Follow up time</dt>
      <dd><%= @discussion.follow_up_time.to_formatted_s(:long)  %></dd>

      <dt>Priority</dt>
      <dd><%= @discussion.priority %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/contacts" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back
      </a>
      <% if @discussion.user_id == current_user.id %>
        <a href="/firms/<%= @discussion.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
        <a href="/delete_firm/<%= @discussion.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
        <% end %>
    </div>
  </div>
</div>
