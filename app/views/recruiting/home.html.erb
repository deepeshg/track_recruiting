<div class="page-header">
  <h2>Welcome, <%= current_user.username %>!</h2>
</div>

<div class="row">
  <div class="col-md-12">
    
    <h3>Your upcoming follow-up discussions</h3>
    <table class="table table-striped table-hover">
      <tr>
      <!-- <th>#</th> -->
      <th>Firm</th>
      <th>Contact name</th>
      <th>Last discussion</th>
      <th>Upcoming discussion</th>
      <th>Priority</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>

    <% @discussions.each do |discussion| %>
    <% if discussion.user_id == current_user.id %>
    <% if discussion.follow_up == "Yes" %>
    <tr>
      <td><a href="/firms/<%= discussion.contact.firm.id %>"><%= discussion.contact.firm.name %></a></td>
      <td><a href="/contacts/<%= discussion.contact.id %>"><%= discussion.contact.name %></a></td>

      <!-- <td><%= discussion.contact.name %></td> -->
      <td><%= discussion.date.to_formatted_s(:long)  %></td>
      <!-- <td><%= discussion.notes %></td> -->
      <!-- <td><%= discussion.follow_up %></td> -->
      <td><%= discussion.follow_up_time.to_formatted_s(:long)  %></td>
      <td><%= discussion.priority %></td>
      <td>
        <a href="/discussions/new" class="btn btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
        <a href="/discussions/<%= discussion.id %>/edit" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
      </td>
    </tr>
    <% end %>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
</div>



