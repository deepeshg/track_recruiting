<div class="page-header">
  <h3><%= @event.event_name %> with <%= @event.firm.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Event name</dt>
      <dd><%= @event.event_name %></dd>

      <dt>Firm</dt>
      <dd><a href="/firm/<%= @event.firm.id %>"><%= @event.firm.name %></a></dd>

      <!-- <dt>User</dt>
      <dd><%= @event.user_id %></dd> -->

      <dt>Notes</dt>
      <dd><%= @event.notes %></dd>

      <dt>Time</dt>
      <dd><%= @event.time %></dd>

      <dt>Priority</dt>
      <dd><%= @event.priority %></dd>

      <dt>Location</dt>
      <dd><%= @event.location %></dd>

      <dt>Event type</dt>
      <dd><%= @event.event_type %></dd>

      <dt>Past event</dt>
      <dd><%= @event.past_event %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/events" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back
      </a>
      <% if @event.user_id == current_user.id %>
        <a href="/events/<%= @event.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
        <a href="/delete_event/<%= @event.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
        <% end %>
  </div>
</div>
