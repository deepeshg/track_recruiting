<div class="page-header">
  <h1>
    Events
    <a href="/events/new" class="btn  btn-primary">New Event</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event name</th>
        <th>Firm</th>
        <th>Event type</th>
        <th>Time</th>
        <th>Location</th>
        <th>Priority</th>
        <!-- <th>Past event</th> -->
        <th>Actions</th>
      </tr>

      <% @events.each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.firm.name %></td>
        <td><%= event.event_type %></td>
        <td><%= event.time.to_formatted_s(:long) %></td>
        <td><%= event.location %></td>
        <td><%= event.priority %></td>
        <!-- <td><%= event.past_event %></td> -->
        <td>
          <a href="/events/<%= event.id %>" class="btn btn-primary"><i class="fa fa-newspaper-o" aria-hidden="true"></i></a>
          <a href="/events/<%= event.id %>/edit" class="btn btn-warning"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
          <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
