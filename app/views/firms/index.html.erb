<div class="page-header">
  <h1>
    Firms
    <a href="/firms/new" class="btn btn-lg btn-success">New Firm</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Industry</th>
        <th>On campus</th>
        <th>Location</th>
        <th>Geography</th>
        <th>Functional fit</th>
        <th>Industry fit</th>
        <th>Booth alumni</th>
        <th>Firm score</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @firms.each do |firm| %>
      <tr>
        <td><a href="/firms/<%= firm.id %>"><%= firm.name %></a></td>
        <td><%= firm.industry %></td>
        <td><%= firm.on_campus %></td>
        <td><%= firm.location %></td>
        <td><%= firm.geography %></td>
        <td><%= firm.functional_fit %></td>
        <td><%= firm.industry_fit %></td>
        <td><%= firm.booth_alumni %></td>
        <td><%= firm.firm_score %></td>
        <td><%= firm.notes %></td>
        <td>

          <a href="/firms/<%= firm.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <a href="/delete_firm/<%= firm.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
