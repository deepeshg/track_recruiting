<div class="page-header">
  <h3>Firm #<%= @firm.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @firm.name %></dd>

      <dt>Industry</dt>
      <dd><%= @firm.industry %></dd>

      <dt>On campus</dt>
      <dd><%= @firm.on_campus %></dd>

      <dt>Location</dt>
      <dd><%= @firm.location %></dd>

      <dt>Geography</dt>
      <dd><%= @firm.geography %></dd>

      <dt>Functional fit</dt>
      <dd><%= @firm.functional_fit %></dd>

      <dt>Industry fit</dt>
      <dd><%= @firm.industry_fit %></dd>

      <dt>Booth alumni</dt>
      <dd><%= @firm.booth_alumni %></dd>

      <dt>Firm score</dt>
      <dd><%= @firm.firm_score %></dd>

      <dt>Notes</dt>
      <dd><%= @firm.notes %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/firms" class="btn btn-primary">
        Back
      </a>
      <a href="/firms/<%= @firm.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_firm/<%= @firm.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
