<div class="page-header">
  <h1>
    Contacts
    <a href="/contacts/new" class="btn btn-primary">New Contact</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Firm</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Source</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @contacts.each do |contact| %>
      <% if contact.user_id == current_user.id %>
      <tr>
        <td><a href="/contacts/<%= contact.id %>"><%= contact.name %></a></td>
        <!-- <td><%= contact.firm_id %></td> -->
        <td><a href="/firms/<%= contact.firm_id %>"><%= contact.firm.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.source %></td>
        <td><%= contact.notes %></td>
        <td>

          <a href="/contacts/<%= contact.id %>/edit" class="btn btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
          <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger" rel="nofollow"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
