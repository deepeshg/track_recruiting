<div class="page-header">
  <h1>
    Contacts
    <a href="/contacts/new" class="btn btn-primary">New Contact</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-4">

    <%= search_form_for @q do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Contact name containing" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Enter a few characters" %>
  </div>

  <%= f.submit :class => "btn btn-primary " %>

  <a href="/firms" class="btn btn-success ">Clear filters</a>
<% end %>

  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <p>

    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Firm</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Source</th>
        <th>Notes</th>
        <th>Edit / Delete</th>
      </tr>

      <% @contacts.each do |contact| %>
      <% if contact.user_id == current_user.id %>
      <tr>
        <td><a href="/contacts/<%= contact.id %>"><%= contact.name %></a></td>
        <!-- <td><%= contact.firm_id %></td> -->
        <td><a href="/firms/<%= contact.firm_id %>"><%= contact.firm.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.source %></td>
        <td><%= contact.notes %></td>
        <td>

          <a href="/contacts/<%= contact.id %>/edit" class="btn btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
          <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger" rel="nofollow"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
