<div class="page-header">
  <h3><%= @contact.name %> </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Name</dt>
      <dd> <%= @contact.name %> (<a href= "<%= @linkedin_link %>"><i class="fa fa-linkedin-square" aria-hidden="true"></i>Linkedin Profile</a>)
      </dd>
      <!-- <dt>Linkedin</dt>
      <dd><a href= "<%= @linkedin_link %>"> Linkedin Profile</a></dd> -->

      <dt>Firm</dt>
      <!-- <dd><%= @contact.firm_id %></dd> -->
      <dd><a href="/firms/<%= @contact.firm_id %>"><%= @contact.firm.name %></a></dd>


      <dt>Position</dt>
      <dd><%= @role %></dd>

      <dt>Location</dt>
      <dd><%= @location %></dd>

      <dt>Email</dt>
      <dd><%= @contact.email %></dd>

      <dt>Phone</dt>
      <dd><%= @contact.phone %></dd>

      <dt>Source</dt>
      <dd><%= @contact.source %></dd>

      <dt>Notes</dt>
      <dd><%= @contact.notes %></dd>

      <dt>Past Discussions</dt>
      <dd>
          <!-- <ul class = "list-group"> -->
            <% @contact.discussions.each do |discussion| %>
            <li class="list-group-item">
              <div>
                <h5 class="list-group-item-heading">
              <a href="/discussions/<%= discussion.id %>"><%= discussion.date.to_formatted_s(:long)  %>
            </a></h5>
              <p class="list-group-item-text">
                <%= discussion.notes  %>
              </p>
              </div>

              </li>
            <% end %>
          <!-- </ul> -->

      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/contacts" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back
      </a>
      <a href="/contacts/<%= @contact.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit
      </a>
      <a href="/delete_contact/<%= @contact.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete
      </a>
    </div>
  </div>
</div>
